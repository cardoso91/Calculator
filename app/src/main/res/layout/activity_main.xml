<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.cardoso.calculator.MainActivity">

    <EditText
        android:id="@+id/display"
        android:layout_width="match_parent"
        android:layout_height="150sp"
        android:cursorVisible="false"
        android:enabled="false"
        android:gravity="bottom|right"
        android:textColor="@android:color/black"
        android:textSize="40dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/clear"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="2"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:gravity="center"
            android:textSize="20dp"
            android:text="Clear"
            android:textAllCaps="true" />

        <TextView
            android:id="@+id/del"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:textSize="20dp"
            android:gravity="center"
            android:text="Del"
            android:textAllCaps="true" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/no7"
            style="@style/Keypad"
            android:text="7" />

        <TextView
            android:id="@+id/no8"
            style="@style/Keypad"
            android:text="8" />

        <TextView
            android:id="@+id/no9"
            style="@style/Keypad"
            android:text="9" />

        <TextView
            android:id="@+id/division"
            style="@style/Keypad"
            android:text="/" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/no4"
            style="@style/Keypad"
            android:text="4" />

        <TextView
            android:id="@+id/no5"
            style="@style/Keypad"
            android:text="5" />

        <TextView
            android:id="@+id/no6"
            style="@style/Keypad"
            android:text="6" />

        <TextView
            android:id="@+id/multiplication"
            style="@style/Keypad"
            android:text="*" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/no1"
            style="@style/Keypad"
            android:text="1" />

        <TextView
            android:id="@+id/no2"
            style="@style/Keypad"
            android:text="2" />

        <TextView
            android:id="@+id/no3"
            style="@style/Keypad"
            android:text="3" />

        <TextView
            android:id="@+id/subtraction"
            style="@style/Keypad"
            android:text="-" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/period"
            style="@style/Keypad"
            android:text="." />

        <TextView
            android:id="@+id/no0"
            style="@style/Keypad"
            android:text="0" />

        <TextView
            android:id="@+id/equal"
            style="@style/Keypad"
            android:text="=" />

        <TextView
            android:id="@+id/addition"
            style="@style/Keypad"
            android:text="+" />

    </LinearLayout>

</LinearLayout>
